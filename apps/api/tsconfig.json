{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@guildserver/server/*": ["../../packages/server/src/*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
